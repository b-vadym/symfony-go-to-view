{
    "name": "symfony-go-to-twig",
    "displayName": "Symfony go to twig",
    "description": "Quick jump to twig view",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "url": "https://github.com/b-vadym/symfony-go-to-view"
    },
    "license": "SEE LICENSE IN LICENSE.md",
    "publisher": "b-vadym",
    "activationEvents": [
        "onLanguage:php",
        "onLanguage:twig"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "symfony-go-to-twig configuration",
            "properties": {
                "symfony-go-to-view.quickJump": {
                    "type": "boolean",
                    "default": true,
                    "description": "Use 'Ctrl' or 'Alt' + click"
                },
                "symfony-go-to-view.loaderPaths": {
                    "type": "object",
                    "properties": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "default": {
                        "(None)": [
                            "templates"
                        ]
                    },
                    "description": "Twig loader paths(output of symfony command debug:twig --format=json loader_paths key)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.63.0",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "@vscode/test-electron": "^1.6.2",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "typescript": "^4.4.4"
    },
    "dependencies": {
        "get-all-files": "^4.1.0"
    }
}
